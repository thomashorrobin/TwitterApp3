<h1>Twitter for Gephi</h1>
<hr>
<h2>Add Accounts</h2>
<p>Enter the users Twitter handle below to pull their data from the API</p>
<br>
<%= form_tag("/home/addaccount") do %>
  <%= label_tag(:username, "Add username:") %>
  <%= text_field_tag(:username) %>
  <%= submit_tag("Add") %>
<% end %>
<hr>
<h2>Manage existing accounts</h2>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Twitter</th>
      <th>Display name</th>
      <th>Followers</th>
      <th>Following</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.username %></td>
        <td><%= account.twitter_id %></td>
        <td><%= account.display_name %></td>
        <td><%= account.followers_count %></td>
        <td><%= account.following_count %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= button_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Clear all accounts', '/home/deleteall', method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Reset all accounts', '/home/resetall', method: :post, data: { confirm: 'Are you sure?' } %>
<hr>
<h2>Export Data</h2>
<%= link_to 'Export CSV', '/home/export_edges', method: :get %>
