<h1>Twitter for Gephi</h1>
<hr>
<h2>Select Accounts to Export</h2>
<%= form_tag("/home/export_selected_edges") do %>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Twitter</th>
        <th>Display name</th>
        <th>

        </th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= account.username %></td>
          <td><%= account.twitter_id %></td>
          <td><%= account.display_name %></td>
          <td>
            <%= check_box_tag 'accounts[]', account.id %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag 'Export' %>
<% end %>
